{
  "name": "investor-radar-backend",
  "version": "1.0.0",
  "description": "Backend API for Investor Radar - Saudi Investment Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --format=esm --packages=external",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "sync": "tsx src/jobs/runSync.ts",
    "discover": "tsx src/jobs/runDiscovery.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest"
  },
  "keywords": [
    "investor",
    "radar",
    "saudi",
    "investment",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.7",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.15",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.20.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^8.0.0",
    "papaparse": "^5.4.1",
    "prisma": "^5.22.0",
    "puppeteer-core": "^21.11.0",
    "typescript": "^5.7.3",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.9",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8"
  }
}
