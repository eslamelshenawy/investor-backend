# ==========================================
# Production Environment Variables
# نسخة للإنتاج - Render + Supabase
# ==========================================

# Database (Supabase PostgreSQL)
# احصل على الرابط من: Supabase Dashboard > Settings > Database > Connection String
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres"

# Redis (اختياري - Upstash)
# احصل على الرابط من: upstash.com
REDIS_URL="redis://default:xxx@xxx.upstash.io:6379"

# JWT Secret (استخدم نص عشوائي طويل)
JWT_SECRET="your-super-long-random-secret-key-at-least-32-characters"
JWT_EXPIRES_IN="7d"

# Server
PORT=10000
NODE_ENV="production"

# Saudi Open Data API
SAUDI_DATA_API="https://open.data.gov.sa/data/api"

# Google Gemini AI
# احصل على المفتاح من: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# CORS Origins (روابط الـ Frontend المسموحة)
# يمكن إضافة عدة روابط مفصولة بفاصلة
CORS_ORIGINS="https://investor-radar.vercel.app,https://your-custom-domain.com"

# Frontend URL (الرابط الرئيسي)
FRONTEND_URL="https://investor-radar.vercel.app"
